@model ExactAdm.Domain.Models.RegisterUser  
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div style="padding-top:50px;"></div>
<div style="padding:50px;">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div>
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { role = "form" }))
                {
                <div>
                    @Html.AntiForgeryToken()
                    <div>
                        <label>User ID</label><br />
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.USERID, new { @class = "form-control txtbox" })
                    </div>
                    <div style="padding-top:20px;"></div>
                    <div>
                        <label>Password</label><br />
                    </div>
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control txtbox" })
                    </div>
                    <div style="padding-top:20px;"></div>
                    <div>
                        <label>Confirm Password</label><br />
                    </div>
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control txtbox" })
                    </div>
                    <div style="padding-top:20px;"></div>
                    <div>
                        <label>Setor</label><br />
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.Setor, new { @class = "form-control txtbox" })
                    </div>
                </div>
                    <div style="padding-left:35%;width:40%;">
                        <div style="padding-top:20px;">
                            <input class="btn btn-primary btn-lg rph-login-button" type="submit" value="Registrar" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

